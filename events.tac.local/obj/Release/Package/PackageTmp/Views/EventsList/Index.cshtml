
@using events.tac.local.Models;
@using TAC.Utils.Helpers;
@using Sitecore.Links;
@model events.tac.local.Models.EventsList

<!-- [Event List] -->
<div class="content-list newslist">
    <ol class="media-list">
        @foreach (var ev in Model.Events)
        {

            <li class="media media-align-middle">
                <div class="media-left">

                    <a href="@LinkManager.GetItemUrl(ev.GetItem())">@ev.EventImage</a>
                </div>
                <div class="media-body">
                    <h3 class="media-heading">
                        <a href="@LinkManager.GetItemUrl(ev.GetItem())">@ev.ContentHeading</a>
                    </h3>
                    <div class="description">
                        <p>@ev.ContentIntro</p>
                    </div>
                </div>
                <div class="metadata well">@ev.EventStartDate</div>
            </li>

        }
    </ol>
</div>
<!-- [Event List] -->
